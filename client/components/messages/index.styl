$messages-tab-width = 400px

.c-messages
  .messages-tab
    width: $messages-tab-width
    border-right: 1px solid #b2b2b2
    display: inline-block
    box-sizing: border-box
    
    .message
      border-bottom: 1px solid #b2b2b2
      height: 100px
      padding: 20px
      
      &:hover
        cursor: pointer
  
  .analytics-pane
    display: inline-block
    width: calc(100% - 400px)
    vertical-align: top
    padding: 30px
    box-sizing: border-box

  .select-a-convo
    text-align: center
