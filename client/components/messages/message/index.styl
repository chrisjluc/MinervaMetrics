.c-message
  border-bottom: 1px solid #b2b2b2
  height: 60px
  padding: 20px
  
  &:hover
    cursor: pointer
    
  .avatar
    width: 60px
    height: 60px
    border-radius: 50%
    background: #f6f7f9
    display: inline-block
    vertical-align: middle
    
  .message-summary
    margin-left: 10px
    display: inline-block
    vertical-align: middle
    
    .name
      font-size: 18px
      margin-bottom: 5px
      
    .summary
      color: #999999
      
