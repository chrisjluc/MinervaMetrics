$conversations-tab-width = 500px

.c-conversations
  font-weight: 200

  .search
    height: 40px
    border-bottom: 1px solid #b2b2b2
    border-right: 1px solid #b2b2b2
    text-align: center
    right: -1px
    position: relative

    input
      width: $conversations-tab-width - 100px

  input
    background-color: #f6f7f9
    border-radius: 3px
    border-style: none
    font-size: 14px
    height: 24px
    line-height: 24px
    padding: 0 28px
    outline: none
    margin-top: 8px
    width: $conversations-tab-width * 2
    max-width: 500px
    box-sizing: border-box
    text-align: center

    &:focus::-webkit-input-placeholder
      color: transparent

  .conversations-tab
    width: $conversations-tab-width
    display: inline-block
    box-sizing: border-box
    position: absolute
    height: calc(100% - 100px)

  .analytics-pane
    .c-emotions
      margin: 30px 30px 30px 30px

    .c-most-freq-words
      margin: 30px 30px 30px 30px

    .c-most-talkative
      margin: 30px 30px 30px 30px

    .c-messages-freq
      margin: 30px 30px 30px 30px

    display: inline-block
    width: calc(100% - 400px)
    vertical-align: top
    padding: 30px
    box-sizing: border-box
    text-align: center
    margin-left: $conversations-tab-width

    .select-a-convo
      text-align: center

    .analyze-button
      background: #0084ff
      color: #fff
      font-size: 40px
      border: none
      outline: none
      border-radius: 3px
      width: 400px
      height: 100px

      &:hover
        cursor: pointer

    .refresh-messages
      background: #0084ff
      padding: 0px 30px
      font-size: 25px
      color: #fff
      height: 100px
      border: none
      display: block
      margin: 0 auto
      width: 500px
      &:focus
        outline: none
      &:hover
        cursor: pointer

    .conversation-title
      margin-bottom: 20px
      display: block
