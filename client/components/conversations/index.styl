$conversations-tab-width = 400px

.c-conversations
  font-weight: 200
  
  .search
    height: 40px
    border-bottom: 1px solid #b2b2b2
    text-align: center
    
    input
      background-color: #f6f7f9
      border-radius: 3px
      border-style: none
      font-size: 14px
      height: 24px
      line-height: 24px
      padding: 0 28px
      outline: none
      margin-top: 8px
      width: $conversations-tab-width - 100px
      box-sizing: border-box
      text-align: center
      
      &:focus::-webkit-input-placeholder
        color: transparent
    
  .conversations-tab
    width: $conversations-tab-width
    border-right: 1px solid #b2b2b2
    display: inline-block
    box-sizing: border-box
    position: absolute
    height: 100%
  
  .analytics-pane
    display: inline-block
    width: calc(100% - 400px)
    vertical-align: top
    padding: 30px
    box-sizing: border-box
    text-align: center
    margin-left: $conversations-tab-width

    .select-a-convo
      text-align: center
    
    .analyze-button
      background: #0084ff
      color: #fff
      font-size: 40px
      border: none
      outline: none
      border-radius: 3px
      width: 400px
      height: 100px
      
      &:hover
        cursor: pointer
